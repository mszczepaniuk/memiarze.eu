@model EditUserViewModel

@{
    ViewBag.Title = "Edycja uzytkownika";
}

<div class="row">
    <div class="col-md-12">
        <form method="post" enctype="multipart/form-data" asp-action="EditUser" asp-controller="Account">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input hidden asp-for="Id" />
            <div class="form-group">
                <label asp-for="About"></label>
                <input asp-for="About" class="form-control" />
                <span asp-validation-for="About" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Avatar">Wybierz zdjecie</label>
                <input asp-for="Avatar" onchange="ValidateImage(this)" class="form-control-file" />
                <span id="imageValidationInfo" asp-validation-for="Avatar" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Edytuj</button>
        </form>
    </div>
</div>

@section scripts{
    <script src="~/js/ValidateImage.js"></script>
}